{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "packageNameTemplate": "kubernetes/kubernetes",
      "matchStrings": [
        "k0ssVersion:\\s*(?<currentValue>v\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "github-releases",
      "managerFilePatterns": [
        "/^vars\\.yaml$/"
      ],
      "versioningTemplate": "semver"
    }
  ]
}
